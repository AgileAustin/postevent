<h1>Users</h1>
<div style="position: relative;top: -15px"><%= link_to 'New SIG', new_user_path %></div>
<table>
  <tr>
    <th>Email</th>
    <th></th>
  </tr>
<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.email %></td>
	<td><%= link_to 'Edit', edit_user_path(resource) if resource == current_user %> <%= link_to 'Delete', resource, :confirm => 'Are you sure?', :method => :delete if resource != current_user && (resource.events == nil || resource.events.empty?) %> <%= link_to 'Reset Password', reset_password_url(:id => resource.id), :confirm => 'Are you sure?' if resource != current_user %></td>
  </tr>
<% end %>
</table>