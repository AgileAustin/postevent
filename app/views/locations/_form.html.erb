<%= form_for @resource do |f| %>
  <% if @resource.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @resource.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %>*<br />
    <%= f.text_field :name, :size => 40, :maxlength => 255  %>
  </p>
  <p>
    <%= f.label :address %>*<br />
    <%= f.text_field :address, :size => 40, :maxlength => 255  %>
  </p>
  <p>
    <%= f.label :directions %><br />
    <%= f.text_area :directions, :size => "80x10", :maxlength => 65536 %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>

<script type="text/javascript">
	focusField('location_name');
</script>