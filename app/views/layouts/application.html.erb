<!DOCTYPE html>
<html>
<head>
  <title>Postevent</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |name, msg| %>
  <% if name == :unauthorized %>
    <span style="color: red"><%= msg %>  To authorize, please go <a href="<%=Rails.configuration.post_url%>/authorize">here</a>.</span>
  <% else %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
<% end %>

<%= yield %>
<br/>
<div id="user_nav">
  <% if current_user %>
    Logged in as <%= link_to current_user.email, edit_user_path(current_user)  %>.
    <%= link_to "Log out", :logout %>
    <%= link_to "Users", :users %>
    <%= link_to "Events", :events %>
    <%= link_to "Locations", :locations %>
    <%= link_to "SIGs", :sigs %>
  <% end %>
</div>
</body>
</html>